{
  "name": "gijitron",
  "version": "1.3.0",
  "description": "gijitron is an editor to take the minutes of a meeting.",
  "main": "app/main/main.js",
  "scripts": {
    "start": "electron .",
    "next:build": "run-s renderer:build renderer:export",
    "renderer:build": "next build app/renderer",
    "renderer:export": "next export app/renderer",
    "dist": "run-s next:build \"electron:build {@}\" --",
    "electron:build": "build --dir --x64 --publish=never",
    "lint": "tslint app/**/*.ts{,x}",
    "test": "echo \"Error: no test specified\""
  },
  "author": "shamofu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shamofu/gijitron.git"
  },
  "build": {
    "files": [
      "app/**",
      "!app/renderer/**",
      "app/renderer/out/**",
      "!app/**/*.map"
    ]
  },
  "devDependencies": {
    "@types/react": "^16.4.13",
    "@types/styled-jsx": "^2.2.5",
    "@zeit/next-typescript": "^1.1.0",
    "draft-js": "^0.10.5",
    "electron": "^2.0.8",
    "electron-builder": "^20.28.4",
    "material-ui": "^0.20.2",
    "moment": "^2.22.2",
    "next": "^6.1.1",
    "npm-run-all": "^4.1.3",
    "raw-loader": "^0.5.1",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3",
    "webpack": "^4.17.2"
  },
  "dependencies": {
    "app-root-path": "^2.1.0",
    "electron-is-dev": "^0.3.0",
    "electron-next": "^3.1.4"
  }
}
